# Sample .env file for AI Answer Sheet Grader
# Copy this file to .env and update with your preferences

# Application settings
HOST=localhost
PORT=8000
DEBUG=True

# OCR engine selection ("easyocr", "tesseract", or "combined")
OCR_ENGINE=easyocr

# OCR language (default is English)
OCR_LANGUAGE=en

# Path to tesseract executable (if not in PATH)
# Windows example: C:/Program Files/Tesseract-OCR/tesseract.exe
TESSERACT_CMD=tesseract





